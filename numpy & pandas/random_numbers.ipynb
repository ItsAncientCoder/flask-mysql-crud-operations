    "import numpy as np\n",
    "\n",
    "n_all_heads = 0\n",
    "\n",
    "for _ in range(10000):\n",
    "    heads = np.random.random(size=4) < 0.5\n",
    "    n_heads = np.sum(heads)\n",
    "    if n_heads == 4:\n",
    "        n_all_heads +=1\n",
    "\n",
    "display(n_all_heads/10000)\n"
   ]
